---
import ContactCard from './ContactCard.astro';
---
<div>
  <header class="text-center mb-10 w-full">
    <div class="flex items-center justify-center">
        <img
        src="/assets/Broquelizate-logos/icono relleno.svg"
        alt="Icono izquierda"
        class="w-6 h-6 transform -translate-y-0"
        />

        <h1 class="text-4xl font-bold text-gold mx-4 my-4">
        Contacto
        </h1>

        <img
        src="/assets/Broquelizate-logos/icono relleno.svg"
        alt="Icono derecha"
        class="w-6 h-6 transform -translate-y-0"
        />
    </div>
    </header>
</div>

<section id="contact" class="flex flex-col lg:flex-row justify-center items-start p-10 gap-6">
    <div class="w-full lg:w-1/3 flex flex-col justify-between">
        <div class="container mx-auto">
          <div class="grid grid-cols-1 gap-4">
      
            <div class="hover:transform hover:scale-105 hover:-translate-y-1 transition-transform duration-300 ease-in-out shadow-lg hover:shadow-xl">
              <ContactCard
                type="location"
                title="Ubicación"
                subtitle="Calle Escobedo esquina con Calle Bravo, Colonia Centro, Gómez Palacio, Durango"
                mapSrc="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3671.6662889041517!2d-103.49773828504704!3d25.56488718372801!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x868fc5c2ec8f5e6f%3A0xa0d7a0e129d5d7c8!2sCalle%20Escobedo%20esquina%20con%20Calle%20Bravo%20(segundo%20piso)%2C%20Colonia%20Centro%2C%20G%C3%B3mez%20Palacio%2C%20Durango.!5e0!3m2!1sen!2smx!4v1693669983746!5m2!1sen!2smx"
              />
            </div>
      
            <div class="hover:transform hover:scale-105 hover:-translate-y-1 transition-transform duration-300 ease-in-out shadow-lg hover:shadow-xl">
              <ContactCard
                type="whatsapp"
                title="WhatsApp"
                subtitle="Enviar mensaje"
                link="https://wa.me/1234567890"
              />
            </div>
      
          </div>
        </div>
      </div>

  <div class="w-full lg:w-2/3">
    <div class="bg-white rounded-lg shadow-md p-8 lg:p-10 flex flex-col justify-between h-full">
      <h2 class="text-2xl font-bold text-gray-800 mb-6">Formulario</h2>
  
      <form class="flex flex-wrap">
        <input type="text" class="bg-gray-100 text-gray-800 border-0 rounded-md p-4 mb-4 focus:bg-gray-200 focus:outline-none focus:ring-1 focus:ring-blue-500 transition ease-in-out duration-150 w-full lg:w-[48%] mr-0 lg:mr-[2%]" placeholder="Nombre Completo" />
        <input type="email" class="bg-gray-100 text-gray-800 border-0 rounded-md p-4 mb-4 focus:bg-gray-200 focus:outline-none focus:ring-1 focus:ring-blue-500 transition ease-in-out duration-150 w-full lg:w-[48%] ml-0 lg:ml-[2%]" placeholder="Email" />
  
        <div class="flex items-center w-full lg:w-[48%] mr-0 lg:mr-[2%] mb-4">
          <input type="number" class="bg-gray-100 text-gray-800 border-0 rounded-md p-4 focus:bg-gray-200 focus:outline-none focus:ring-1 focus:ring-blue-500 transition ease-in-out duration-150 w-full" placeholder="Número" />
          <label class="ml-4 flex items-center text-black">
            <input class="w-5 h-5 border-gray-300 rounded mr-2 focus:ring-blue-500" type="checkbox">
            <p class="text-black">Recibir ofertas y promociónes al correo</p>
          </label>
        </div>
  
        <textarea name="message" class="bg-gray-100 text-gray-800 border-0 rounded-md p-4 mb-4 focus:bg-gray-200 focus:outline-none focus:ring-1 focus:ring-blue-500 transition ease-in-out duration-150 w-full h-32 lg:h-48" placeholder="Mensaje"></textarea>
  
        <button type="submit" class="bg-gradient-to-r from-yellow-500 to-black text-white font-bold py-2 px-4 rounded-md mt-4 hover:bg-yellow hover:to-blue-600 transition ease-in-out duration-150 w-full lg:w-auto">Enviar</button>
      </form>
    </div>
  </div>
  
  
</section>
